// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  tripPlans TripPlan[]
  favorites Favorite[]
  
  @@map("users")
}

model TripPlan {
  id        String   @id @default(cuid())
  userId    String
  title     String
  citySlug  String?
  items     String   // JSON string of plan items
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("trip_plans")
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  citySlug  String
  createdAt DateTime @default(now())
  
  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Ensure unique combination of user and city
  @@unique([userId, citySlug])
  @@map("favorites")
}
